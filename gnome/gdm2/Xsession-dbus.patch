     echo "$0: ssh-agent not found!"
 fi
 
+# add dbus-launch if found
+dbuslaunch="`gdmwhich dbus-launch`"
+if [ -n "$dbuslaunch" ] && [ -x "$dbuslaunch" ]; then
+    command="$dbuslaunch --auto-syntax --exit-with-session $command"
