SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELLALT-$VERSION
   SOURCE_URL[0]=$GNOME_URL/sources/$SPELLALT/$BRANCH/$SOURCE
     SOURCE_HASH=sha256:c45855924f0ee7bab43e2dd38bfafd2ac815c6e9864341c0161e171173dcec7c
